pipeline{
    agent any
    environment{
         name='sudhansu'
        age=28
        isEmployed=true
     
    }
    stages{
        stage("groovy_variables")
        {
        
            steps{
                echo """Jenkins pipeline created by the author :${env.name} \n
                Age:${env.age} \n he is already employed:${env.isEmployed} \n           
                """
                script{
                       def list=["Bangalore","Delhi","Bhubaneswar"]
                       def map=[env_name:'prod']
                    for (location in env.list){
                        echo "${name} is open to work in ${location}"
                    }
                echo "We are ready to deploy in ${env.map}"
                }
            }
        }
    }
}