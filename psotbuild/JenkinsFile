pipeline {
    agent any

    options {
        timestamps()   // Show timestamps in console logs
    }

    stages {
        stage('Parallel Executor') {
            parallel {
                stage('exe-1') {
                    steps {
                        echo "Executing the first job."
                        sleep 5
                    }
                }
                stage('exe-2') {
                    steps {
                        echo "Executing the second job."
                        sleep 5
                    }
                }
                stage('exe-3') {
                    steps {
                        echo "Executing the third job."
                        sleep 5
                    }
                }
            }
        }

        stage('Exception Handling') {
            steps {
                script {
                    try {
                        def result = 10 / 0
                        echo "Result = ${result}"
                    } catch (Exception e) {
                        echo "Some exception occurred: ${e.message}"
                    } finally {
                        echo "Exception handled successfully."
                    }
                }
            }
        }
    }

    post {
        always {
            cleanWs()
            echo "Workspace cleaned."
        }

        success {
            script {
                catchError(buildResult: 'SUCCESS', stageResult: 'SUCCESS') {
                    emailext(
                        subject: "Build SUCCESS: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                        body: """<p>✅ Build passed successfully</p>
                                 <p>Job: ${env.JOB_NAME}</p>
                                 <p>Build Number: ${env.BUILD_NUMBER}</p>""",
                        mimeType: 'text/html',
                        to: "sudhansu.gouda@equbot.com"
                    )
                }
            }
        }

        failure {
            script {
                catchError(buildResult: 'SUCCESS', stageResult: 'SUCCESS') {
                    emailext(
                        subject: "Build FAILURE: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                        body: """<p>❌ Build failed</p>
                                 <p>Job: ${env.JOB_NAME}</p>
                                 <p>Build Number: ${env.BUILD_NUMBER}</p>""",
                        mimeType: 'text/html',
                        to: "sudhansu.gouda@equbot.com"
                    )
                }
            }
        }
    }
}
