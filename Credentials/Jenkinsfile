pipeline {
    agent any

    environment {
        NAME = "Sudhansu"
        AGE = "28"
        IS_EMPLOYED = "true"
    }

    stages {
        Stage("STAGE-RECOVER USERNAME&PASSWORD")
        {
            steps
            {
                withCredentials([usernamePassword([
                    credentialsId:'sudhansu_personal',
                    usernameVariable:'USER',
                    passwordVariable:'PASS'
                ])])
                {
                    sh 'echo "User name:$USER"'
                    sh 'echo "User password:$PASS"'
                }
            }
        }
    }
}
